generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        Int      @id @default(autoincrement())
  table     String
  item      String
  status    String   @default("pendente")
  type      String
  drink     String?
  note      String?
  createdAt DateTime @default(now())
  price     Float?   @default(0)
}
